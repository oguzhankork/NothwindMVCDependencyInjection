@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover">
<tr>
    <th>Ürün ID</th>
    <th>Ürün İsim</th>
    <th>Ürün Fiyat</th>
</tr>
@foreach (Product item in Model)
{
    <tr>
        <td>@item.ProductId</td>
        <td>@item.ProductName</td>
        <td>@item.UnitPrice</td>
    </tr>
}
</table>

